<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

        <title>Consulta SQL</title>
    </head>
    <body>
        <div class="container">
            <h1 class="text-center mt-3 mb-3"><%= title %></h1>
            
            <% if(action == 'add') { %>

            <% } else { %>
                
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col">Subconsultas</div>
                        <div class="col"></div>
                    </div>
                </div>
                <div class="card-body">
                    <form id="form-bairro" method="post">
                        <div class="input-group">
                            <select class="form-select" id="bairros">
                              <option selected>Escolha o bairro</option>
                              <option value="Centro">Centro</option>
                              <option value="Botafogo">Botafogo</option>
                              <option value="Copacabana">Copacabana</option>
                              <option value="Lagoa">Lagoa</option>
                              <option value="Tijuca">Tijuca</option>
                              <option value="Benfica">Benfica</option>
                              <option value="Vila Isabel">Vila Isabel</option>
                              <option value="Bonsucesso">Bonsucesso</option>
                              <option value="Del Castilho">Del Castilho</option>
                              <option value="Irajá">Irajá</option>
                              <option value="Madureira">Madureira</option>
                              <option value="Jacarepaguá">Jacarepaguá</option>
                              <option value="Jardim Carioca">Jardim Carioca</option>
                              <option value="Guadalupe">Guadalupe</option>
                              <option value="Santa Teresa">Santa Teresa</option>
                              <option value="Barra da Tijuca">Barra da Tijuca</option>
                              <option value="Campo Grande">Campo Grande</option>
                              <option value="Jardim Sulacap">Jardim Sulacap</option>
                              <option value="Méier">Méier</option>
                              <option value="Bangu">Bangu</option>
                              <option value="Laranjeiras">Laranjeiras</option>
                              <option value="Ipanema">Ipanema</option>
                              <option value="Leblon">Leblon</option>
                              <option value="Gávea">Gávea</option>
                              <option value="Vila Cosmos">Vila Cosmos</option>
                              <option value="Freguesia">Freguesia</option>
                              <option value="Recreio">Recreio</option>
                            </select>
                            <button id="pesquisar-bairro" class="btn btn-primary" type="submit">Pesquisar</button>
                          </div>
                    </form>
                    <% if (sampleData) { %>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th>Salas</th>
                                <th>Capacidade</th>
                                <th>Cinema</th>
                            </tr>
                            <% if(sampleData.length > 0)
                            {
                                sampleData.forEach(function(select){
                            %>
                            <tr>
                                <td><%= select.salas %></td>
                                <td><%= select.capacidade %></td>
                                <td><%= select.nome %></td>
                                <td></td>
                            </tr>
                            <%
                                });
                            }
                            else
                            {
                            %>
                            <tr>
                                <td colspan="5">No Data Found</td>
                            </tr>
                            <%
                            }
                            %>
                        </table>
                    </div>
                    <% } %>
                </div>
            </div>

            <% } %>

        </div> 

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <script>
            document.getElementById('bairros').onchange = () => {
                const bairro = document.getElementById('bairros').value;
                const baseUrl = window.location.href.substr(0, window.location.href.indexOf('/'));
                document.getElementById('form-bairro').action = baseUrl + 'cinemaBairroEscolhido/' + bairro;
            }
        </script>
    </body>
</html>